    function ListarProvincia(){
        $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cboprovincia")
         jQuery.ajax({
            url: '@Url.Action("ObtenerProvincia","Tienda")',
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset-utf-8",
            success: function(data){
                if (data.lista != null) {
                    $.each(data.lista, function (i, item) {
                        $("<option>").attr({"value":item.IdProvincia}).text(item.Descripcion).appendTo("#cboprovincia")
                    })
                    ListarCanton();
                }
            }
         })
        }

        $("#cboprovincia").on("change", function () {
            ListarCanton();
        })

        function ListarCanton() {
            $("#cbocanton").html("");

            $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cbocanton")

            jQuery.ajax({
                url: '@Url.Action("ObtenerCanton", "Tienda")',
                type: "POST",
                data: JSON.stringify({ IdProvincia: $("#cboprovincia option:selected").val() }),
                dataType: "json",
                contentType: "application/json; charset-utf-8",
                success: function (data) {
                    if (data.lista != null) {
                        $.each(data.lista, function (i, item) {
                            $("<option>").attr({ "value": item.IdCanton }).text(item.Descripcion).appendTo("#cbocanton")
                        })
                        ListarDistrito();
                    }
                }
            })
        }

        $("#cbocanton").on("change", function () {
            ListarDistrito();
        })

        function ListarDistrito() {
            $("#cbodistrito").html("");

            $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cbodistrito")

            jQuery.ajax({
                url: '@Url.Action("ObtenerDistrito","Tienda")',
                type: "POST",
                data: JSON.stringify({ IdProvincia: $("#cboprovincia option:selected").val(), IdCanton: $("#cbocanton option:selected").val() }),
                dataType: "json",
                contentType: "application/json; charset-utf-8",
                success: function (data) {
                    if (data.lista != null) {
                        $.each(data.lista, function (i, item) {
                            $("<option>").attr({ "value": item.IdDistrito }).text(item.Descripcion).appendTo("#cbodistrito")
                        })

                    }
                }
            })
        }

